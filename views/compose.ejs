<%- include("partials/header"); -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">

  <div class="form-group">
    <label for="blogtitle">Title</label>
    <input id="blogtitle" class="form-control" type="text" name="blogTitle">
  </div>

  <div class="form-group">
    <label for="blogpost">Post</label>
    <textarea id="blogpost" class="form-control" name="blogPost" rows="5" cols="40"></textarea>
  </div>

  <button type="submit" name="button" class="btn btn-primary">Publish</button>

</form>


